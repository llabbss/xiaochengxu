/* pages/location/location.wxss */
@import '/assets/iconfont.wxss';
.location {
  overflow: auto;
  position: relative;
  height: 100%;
}
.location .l-header {
  padding: 0 20rpx;
  padding-top: 120rpx;
  display: grid;
  grid-template-columns: repeat(3, 33.3%);
  justify-content: center;
  align-items: center;
  line-height: 16px;
  position: fixed;
  width: 100%;
  z-index: 100;
  padding-bottom: 20rpx;
  top: 0;
  background: #ffffff;
}
.scrollContain {
  margin-top: 200rpx;
  width: 100%;
}
.search-pannel {
  display: grid;
  position: relative;
  grid-template-columns: repeat(2, auto);

  padding: 0 20rpx;
  font-size: 14px;
}
.search-pannel .text {
  line-height: 60rpx;
}
.search-pannel .search-container {
  border-radius: 30rpx;
  background: #f3f1f5;
  position: relative;
  height: 60rpx;
  width: 600rpx;
}
.search-pannel .search-container .search-input {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 60rpx;
}
.search-pannel .search-container .search-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.search-pannel .search-container .clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.cur-pos {
  padding-left: 20rpx;
  margin-top: 30rpx;
}
.nearlyLoc {
  padding-left: 20rpx;
  margin-top: 40rpx;
  font-size: 14px;
}
.nearly-container {
  display: grid;
  grid-template-columns: repeat(3, 200rpx);
}
.local-item {
  margin-top: 30rpx;
  border: 1px solid #e4e0e4;
  border-bottom: 0;
  text-align: center;
  line-height: 35px;
  margin-right: 20rpx;
}
.local-item:nth-child(3n) {
  margin-right: 0;
}
.loc-item {
  color: #f6c800;
  font-weight: bolder;
  font-size: 16px;
}
.hot-cities {
  margin: 0 20rpx;
  margin-top: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e4e0e4;
}

.hot-city-list {
  display: grid;
  grid-template-columns: repeat(3, 200rpx);
}
.hot-city-list .local-item {
  border-bottom: 1px solid #e4e0e4;
}
.hot-city-list .local-item:nth-child(n + 4) {
  margin-top: 10rpx;
}
.allCities {
  margin-top: 20rpx;
}
.allCities .text {
  border: 0;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}
.allCities .city {
  padding: 20rpx 0;
  padding-top: 0;
}
.cities-item .local-item {
  border: 0;
  margin: 0 20rpx;
  text-align: left;
  border-bottom: 1px solid #e4e0e4;
  border-left: 0;
  border-right: 0;
  padding-left: 20rpx;
  line-height: 45px;
}
.cities-item .local-item:last-child {
  border-bottom: 0;
}
.cities-item .local-item:first-child {
  margin-top: 0;
}
.city .chart {
  background: #faf6f8;
  padding: 10rpx;
  padding-left: 60rpx;
  margin: 0 -20rpx;
}
.charts {
  position: fixed;
  right: 10rpx;
  display: flex;
  flex-direction: column;
  top: 50%;
  transform: translateY(-40%);
  font-size: 12px;
  width: 30px;
  text-align: center;
}

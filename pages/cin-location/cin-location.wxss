/* pages/cin-location/cin-location.wxss */
@import '/assets/iconfont.wxss';
page {
  height: 100%;
}
.cin-loc {
  overflow: auto;
  position: relative;
  height: 100%;
  background: #f3eff4;
}

.cin-loc .l-header {
  padding: 0 20rpx;
  padding-top: 120rpx;
  display: grid;
  grid-template-columns: repeat(3, 33.3%);
  justify-content: center;
  align-items: center;
  line-height: 16px;
  position: fixed;
  width: 100%;
  z-index: 100;
  padding-bottom: 20rpx;
  top: 0;
  background: #ffffff;
}
.location {
  margin-top: 85px;
  padding: 15rpx 20rpx;
  display: grid;
  grid-template-columns: repeat(2, auto);
  grid-template-rows: 100%;
  justify-content: space-between;
  background: #ffffff;
}
.location .cine-info {
  display: grid;
  grid-template-columns: 100%;
  grid-template-rows: repeat(2, auto);
  padding: 10rpx 0;
}
.location .cine-info .cine-add {
  color: #9f9a9f;
  font-size: 12px;
}
.location .map {
  display: grid;
  grid-template-rows: repeat(2, auto);
  grid-template-columns: repeat(2, auto);
  align-items: center;
  text-align: center;
  padding-left: 10rpx;
  align-self: center;
}
.map .map-cont {
  display: grid;
  grid-template-rows: repeat(2, auto);
  margin-left: 20rpx;
}
.map .line {
  color: #9f9a9f;
}
.location .map .text {
  font-size: 12px;
  color: #9f9a9f;
  margin-top: 10rpx;
}
.location .map .i-map {
  color: #88aff5;
  height: 14px;
  line-height: 14px;
}
